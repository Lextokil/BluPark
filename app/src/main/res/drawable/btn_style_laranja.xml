<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#FFF53B" />
            <gradient android:angle="-90" android:startColor="#BB1C1C" android:endColor="#BB1C1C"  />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#00CA3126" />
            <gradient android:angle="-90" android:startColor="#FF2010" android:endColor="#FF2010" />
        </shape>
    </item>
</selector>