<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CompraTicketsActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="30dp"
            android:background="#12B9B9B9"
            android:fontFamily="@font/roboto_condensed_bold"
            android:text="Nenhuma quantidade selecionada."
            android:textColor="#2548A3"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="26dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn10"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_style_dashboard_adicionar_veiculo"
                android:fontFamily="@font/roboto_condensed_bold"
                android:onClick="addTicket"
                android:text="+10 Tickets"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn50"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/btn_style_dashboard_adicionar_veiculo"
                android:fontFamily="@font/roboto_condensed_bold"
                android:onClick="addTicket"
                android:text="+50 Tickets"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn100"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="28dp"
                android:layout_weight="1"
                android:background="@drawable/btn_style_dashboard_adicionar_veiculo"
                android:fontFamily="@font/roboto_condensed_bold"
                android:onClick="addTicket"
                android:text="+100 Tickets"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnConfirm"

            android:layout_width="match_parent"

            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/btn_style_dashboard_comprar"
            android:fontFamily="@font/roboto_condensed_bold"
            android:onClick="confirmarCompra"
            android:text="Finalizar Compra"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/bluparklogo" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>